{
	"name": "@pdc/service",
	"description": "The service backend for the Philanthropy Data Commons",
	"main": "dist/index.js",
	"scripts": {
		"build": "npm run cleanup && npm run build:node && npm run build:assets && npm run build:openapi",
		"build:node": "tsc -p tsconfig.json",
		"build:assets": "copyfiles -u 1 \"src/**/*.sql\" \"src/**/.keep\" \"src/public/**\" dist",
		"build:openapi": "redocly bundle \"src/openapi/api.json\" -o \"dist/openapi/api.json\"",
		"cleanup": "rimraf dist",
		"format": "npm run format:prettier && npm run format:sqlfluff ",
		"format:prettier": "prettier . --write",
		"format:sqlfluff": "./venv/bin/sqlfluff fix src/database/",
		"lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:tsc && npm run lint:openapi && npm run lint:sqlfluff",
		"lint:eslint": "eslint ./src --max-warnings=0",
		"lint:openapi": "npx @redocly/cli lint src/openapi/api.json",
		"lint:tsc": "tsc --noEmit -p tsconfig.dev.json",
		"lint:prettier": "prettier . --check",
		"lint:sqlfluff": "./venv/bin/sqlfluff lint src/database/",
		"migrate": "ts-node src/scripts/migrate.ts | pino-pretty",
		"postinstall": "[ ! -d \"venv\" ] && python3 -m venv venv; ./venv/bin/pip install -r sqlfluff/requirements.txt",
		"start": "ts-node src/index.ts | pino-pretty",
		"test": "npm run test:unit && npm run test:integration",
		"test:unit": "jest --config=jest.config.unit.js",
		"test:integration": "jest --config=jest.config.int.js --runInBand",
		"test:ci": "jest --config=jest.config.ci.js --runInBand"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PhilanthropyDataCommons/pdc.git"
	},
	"keywords": [
		"Philanthropy",
		"Common",
		"Application",
		"Grant",
		"Management",
		"System"
	],
	"author": "Open Tech Strategies",
	"license": "AGPL-3.0",
	"bugs": {
		"url": "https://github.com/PhilanthropyDataCommons/pdc/issues"
	},
	"homepage": "https://github.com/PhilanthropyDataCommons/pdc#readme",
	"engines": {
		"node": "22"
	},
	"type": "commonjs",
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@jest/globals": "^29.7.0",
		"@redocly/cli": "^1.34.3",
		"@tsconfig/node22": "^22.0.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jest": "^29.5.14",
		"@types/language-tags": "^1.0.4",
		"@types/node": "^22.15.30",
		"@types/node-fetch": "^2.6.12",
		"@types/pg": "^8.15.4",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"@types/validator": "^13.15.1",
		"copyfiles": "^2.4.1",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-import-resolver-typescript": "^4.4.3",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-sort-exports": "^0.9.1",
		"expect-type": "^1.2.1",
		"jest": "^29.7.0",
		"jsonwebtoken": "^9.0.2",
		"mock-jwks": "^1.0.10",
		"nock": "^14.0.5",
		"pino-pretty": "^13.0.0",
		"prettier": "3.5.3",
		"rimraf": "^6.0.1",
		"supertest": "^7.1.1",
		"swagger-spec-validator": "^5.0.0",
		"ts-jest": "^29.3.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.0"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.826.0",
		"@aws-sdk/s3-presigned-post": "^3.826.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"ajv-keywords": "^5.1.0",
		"cors": "^2.8.5",
		"csv-parse": "^5.6.0",
		"express": "^5.1.0",
		"express-jwt": "^8.5.1",
		"graphile-worker": "^0.16.6",
		"jwks-rsa": "^3.2.0",
		"language-tags": "^1.0.9",
		"monocle-ts": "^2.3.13",
		"newtype-ts": "^0.3.5",
		"node-fetch": "^2.7.0",
		"pino": "^9.7.0",
		"pino-http": "^10.5.0",
		"postgres-schema-migrations": "^6.1.0",
		"require-env-variable": "^4.0.2",
		"swagger-ui-dist": "^5.24.0",
		"swagger-ui-express": "^5.0.1",
		"tinypg": "^7.0.0",
		"tmp-promise": "^3.0.3",
		"uuid": "^11.1.0",
		"validator": "^13.15.15"
	},
	"overrides": {
		"mock-jwks": {
			"nock": "14"
		}
	}
}

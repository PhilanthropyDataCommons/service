{
	"name": "@pdc/service",
	"description": "The service backend for the Philanthropy Data Commons",
	"main": "dist/index.js",
	"scripts": {
		"build": "npm run cleanup && npm run build:node && npm run build:assets && npm run build:openapi",
		"build:node": "tsc -p tsconfig.json",
		"build:assets": "copyfiles -u 1 \"src/**/*.sql\" \"src/**/.keep\" \"src/public/**\" dist",
		"build:openapi": "redocly bundle \"src/openapi/api.json\" -o \"dist/openapi/api.json\"",
		"cleanup": "rimraf dist",
		"format": "npm run format:eslint && npm run format:prettier && npm run format:sqlfluff",
		"format:eslint": "eslint ./src --fix || true",
		"format:prettier": "prettier . --write",
		"format:sqlfluff": "./venv/bin/sqlfluff fix src/database/",
		"lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:tsc && npm run lint:openapi && npm run lint:sqlfluff && npm run lint:docker-compose",
		"lint:docker-compose": "dclint ./compose-ci.yml",
		"lint:eslint": "eslint ./src --max-warnings=0",
		"lint:openapi": "npx @redocly/cli lint src/openapi/api.json",
		"lint:tsc": "tsc --noEmit -p tsconfig.dev.json",
		"lint:prettier": "prettier . --check",
		"lint:sqlfluff": "./venv/bin/sqlfluff lint src/database/",
		"migrate": "ts-node src/scripts/migrate.ts | pino-pretty",
		"install:python": "[ ! -d \"venv\" ] && python3 -m venv venv; ./venv/bin/pip install -r sqlfluff/requirements.txt",
		"start": "ts-node src/index.ts | pino-pretty",
		"test": "npm run test:unit && npm run test:integration",
		"test:unit": "jest --config=jest.config.unit.js",
		"test:integration": "jest --config=jest.config.int.js --runInBand",
		"test:ci": "jest --config=jest.config.ci.js --runInBand"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/PhilanthropyDataCommons/service.git"
	},
	"keywords": [
		"Philanthropy",
		"Common",
		"Application",
		"Grant",
		"Management",
		"System"
	],
	"author": "Open Tech Strategies",
	"license": "AGPL-3.0",
	"bugs": {
		"url": "https://github.com/PhilanthropyDataCommons/pdc/issues"
	},
	"homepage": "https://github.com/PhilanthropyDataCommons/pdc#readme",
	"engines": {
		"node": "24"
	},
	"type": "commonjs",
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@jest/globals": "^30.2.0",
		"@redocly/cli": "^2.14.1",
		"@smithy/util-stream": "^4.5.4",
		"@tsconfig/node24": "^24.0.3",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/jest": "^30.0.0",
		"@types/language-tags": "^1.0.4",
		"@types/mime-types": "^3.0.1",
		"@types/node": "^24.10.4",
		"@types/pg": "^8.16.0",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"@types/validator": "^13.15.10",
		"aws-sdk-client-mock": "^4.1.0",
		"copyfiles": "^2.4.1",
		"dclint": "^3.1.0",
		"eslint": "^9.39.2",
		"eslint-config-love": "^140.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-pino": "^1.0.3",
		"eslint-plugin-sort-exports": "^0.9.1",
		"expect-type": "^1.3.0",
		"jest": "^30.2.0",
		"jsonwebtoken": "^9.0.3",
		"mock-jwks": "^1.0.10",
		"nock": "^14.0.10",
		"pino-pretty": "^13.1.3",
		"prettier": "3.8.1",
		"rimraf": "^6.1.2",
		"supertest": "^7.1.4",
		"swagger-spec-validator": "^5.0.0",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.975.0",
		"@aws-sdk/s3-presigned-post": "^3.975.0",
		"@aws-sdk/s3-request-presigner": "^3.975.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"ajv-keywords": "^5.1.0",
		"cors": "^2.8.5",
		"csv-parse": "^6.1.0",
		"express": "^5.2.1",
		"express-jwt": "^8.5.1",
		"graphile-worker": "^0.16.6",
		"jwks-rsa": "^3.2.0",
		"language-tags": "^1.0.9",
		"mime-types": "^3.0.2",
		"monocle-ts": "^2.3.13",
		"newtype-ts": "^0.3.5",
		"node-stream-zip": "^1.15.0",
		"pino": "^10.1.0",
		"pino-http": "^11.0.0",
		"postgres-schema-migrations": "^6.1.0",
		"require-env-variable": "^4.0.2",
		"swagger-ui-dist": "^5.31.0",
		"swagger-ui-express": "^5.0.1",
		"tinypg": "^7.0.0",
		"tmp-promise": "^3.0.3",
		"uuid": "^11.1.0",
		"validator": "^13.15.26"
	},
	"overrides": {
		"mock-jwks": {
			"nock": "14"
		}
	}
}
